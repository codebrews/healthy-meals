extends layout

block content
  section#find-recipes.bg-mint.form-pad.nav-clear
    .container
      h4.text-success.border-bottom.pb-2 Find Recipes
      form
        .row
          .col-12.col-md-6.col-lg-4.form-group
            label(for='exampleFormControlSelect1') Nutrition Search Parameters
            select#exampleFormControlSelect1.form-control(value='Max Calories')
              option Max Protien
              option Min Protien
              option(selected='') Max Calories
              option Min Calories
              option Max Carbs
              option Min Carbs
          .col-12.col-md-6.col-lg-4.form-group
            label(for='exampleInputEmail1') Amount
            input#exampleInputEmail1.form-control(type='email' aria-describedby='emailHelp' placeholder='800')
          .col-12.col-md-6.col-lg-4.form-group
            label(for='exampleInputPassword1') Max Results
            input#exampleInputPassword1.form-control(type='password' placeholder='20-100')
          .col-12.col-md-6.col-lg-4.form-group
            label(for='exampleFormControlSelect1') Nutrition Search Parameters
            select#exampleFormControlSelect1.form-control
              option Max Protien
              option(selected='') Min Protien
              option Max Calories
              option Min Calories
              option Max Carbs
              option Min Carbs
          .col-12.col-md-6.col-lg-4.form-group
            label(for='exampleInputEmail1') Amount
            input#exampleInputEmail1.form-control(type='email' aria-describedby='emailHelp' placeholder='50')
          .col-12.col-md-6.col-lg-4.form-group
            label(for='exampleInputPassword1') Includes Ingredients (optional)
            input#exampleInputPassword1.form-control(type='password' placeholder='Chicken, Broccoli')
        .row.justify-content-end.pt-3
          .col
            button.btn.btn-success(type='submit') Get List
  section#recipe-list
    .container
      .row
        h4.pt-5.my-4.border-bottom.pb-2
          i.fa.fa-cutlery.text-success(aria-hidden='true')
          |                     All
          |                     recipes
      #showRecipes.row.g-5.mb-5
        each recipe in data
            .col-12.col-md-6.col-xl-4
              .card.p-0.shadow.image-ratio(data-recipeid=recipe.id)
                h5.container-fluid.card-header.text-secondary.bg-mint.text-dark
                  i.fas.fa-user
                  |  Guy Fieri
                a.pic-link(href=`/${recipe.id}`)
                  .w-100(id=`img-${recipe.id}` style=`background-image: url(${recipe.image}); background-size: 110%; background-position: center center;`)
                a.text-dark.recipe-link(href=`/${recipe.id}`)
                  h3.ct-height.card-title.text-center.px-5.pt-3.pb-0.mb-0 #{recipe.title}
                .card-body
                  p.card-text.px-3 Bacon ipsum dolor steak amet pork flank shankle strip tenderloin
                  .row
                    .col-6.px-3.mb-3
                      .d-grid.gap-2
                        button.btn.btn-outline-dark.rounded-pill calories: #{recipe.calories}
                    .col-6.px-3.mb-3
                      .d-grid.gap-2
                        button.btn.btn-outline-dark.rounded-pill
                          | protein: #{recipe.protein}
                    .col-6.px-3.mb-3
                      .d-grid.gap-2
                        button.btn.btn-outline-dark.rounded-pill fat: #{recipe.fat}
                    .col-6.px-3.mb-3
                      .d-grid.gap-2
                        button.btn.btn-outline-dark.rounded-pill carbs: #{recipe.carbs}



